{
    "version": 1.0,
    "tasks": {
        "loadTransactions": "load_transactions",
        "categorizeTransactions": "categorize_transactions"
    },
    "paths": {
        "repoPath": "${repo_base_path}",
        "codePath": "${repo_base_path}${sep}PyFynance",
        "inputPath": "${repo_base_path}${sep}input",
        "outputPath": "${repo_base_path}${sep}output",
        "logsPath": "${repo_base_path}${sep}logs",
        "resourcesPath": "${repo_base_path}${sep}PyFynance${sep}resources",
        "dbPath": "${repo_base_path}${sep}PyFynance${sep}resources${sep}databases",
        "testPath": "${repo_base_path}${sep}test"
    },
    "ofxParser": {
        "objectTypes": ["banking_transactions"],
        "castFields": ["dtposted", "dtuser", "trnamt"],
        "htmlTags": ["br"]
    },
    "database": {
        "dbNames": ["transactions", "rules"],
        "tables": {
            "transactions": ["transactions"],
            "rules": ["base_rules", "custom_rules"]
        },
        "columnSpecs": {
            "transactions": {
                "institution": "text",
                "account": "text",
                "tran_id": "text",
                "tran_type": "text",
                "amount": "decimal",
                "narrative": "text",
                "date_posted": "text",
                "date_processed": "text",
                "rule_id": "text",
                "tran_category": "text",
                "primary_category": "text",
                "secondary_category": "text"
            },
            "base_rules": {
                "id": "text",
                "type": "text",
                "operation": "text",
                "value": "text",
                "confidence": "integer",
                "tran_category": "text",
                "primary_category": "text",
                "secondary_category": "text"
            }
        },
        "primaryKeys": {
            "transactions": ["institution", "account", "tran_id"],
            "base_rules": ["ruleId"]
        },
        "columns": {
            "transactions": ["institution", "account", "tran_id", "tran_type", "amount", "narrative", "date_posted",
                "date_processed", "rule_id", "tran_category", "primary_category", "secondary_category"],
            "base_rules": ["id", "type", "operation", "value", "confidence", "tran_category", "primary_category",
                "secondary_category"]
        }
    }
}